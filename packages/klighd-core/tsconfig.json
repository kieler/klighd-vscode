{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "noUnusedLocals": false, // eslint handles this rule instead
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "outDir": "lib",
    "lib": [
      "es2023",
      "dom"
    ],
    "jsx": "react",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}