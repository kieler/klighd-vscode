scchart ABRO {
	input bool A, B, R
	output bool O

	initial state ABO {
		entry do O = false

		initial state WaitAB {
			region handleA {
				initial state wA
				if A go to dA

				final state dA
			}

			region handleB {
				initial state wB
				if B go to dB

				final state dB
			}
		}
		do O = true join to done

		state done
	}
	if R abort to ABO
}